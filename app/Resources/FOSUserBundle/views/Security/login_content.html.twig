<div class="container" id="manager-login">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="row">
            <div class="col-xs-12 col-md-5">
                <h2 class="text-right">
                    Uživatelská sekce
                    <span>Přihlášení</span>
                </h2>
            </div>

            <div class="col-xs-12 col-md-4">

                {% if error %}
                    <div class="alert alert-danger">
                        <i class="fa fa-fw fa-exclamation-triangle"></i> {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <div class="form-group">
                    <label for="username">Jméno:</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-fw fa-user"></i></span>
                        <input class="form-control" type="text" id="username" name="_username"
                               value="{{ last_username }}" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="username">Heslo:</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-fw fa-key"></i></span>
                        <input class="form-control" type="password" id="password" name="_password" />
                    </div>
                </div>

                <div class="form-group">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">Zůstat přihlášen</label>

                    <input type="hidden" name="_target_path" value="/manager" />
                    <button type="submit" class="btn btn-default pull-right"><i class="fa fa-fw fa-sign-in"></i>
                        Přihlásit
                    </button>
                </div>

            </div>
        </div>
    </form>

</div>