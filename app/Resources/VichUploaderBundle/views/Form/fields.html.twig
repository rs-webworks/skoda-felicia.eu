{% block vich_file_row -%}
    {% set force_error = true %}
    {{- block('form_row') }}
{%- endblock %}

{% block vich_file_widget %}
    {% spaceless %}
        <div class="vich-file">
            <div class="panel panel-default">
                {% if download_uri is defined and download_uri %}
                    <div class="panel-heading">
                        {{ download_uri }}
                    </div>

                    <div class="panel-body">
                        <div class="col-xs-12 col-sm-2 text-center text-muted">
                            <i class="fa fa-fw fa-5x fa-file"></i>
                        </div>

                        <div class="col-xs-12 col-sm-10">
                            {% if download_uri is defined and download_uri %}
                                <div class="form-group">
                                    <a href="{{ download_uri }}" class="btn btn-default"><i class="fa fa-fw fa-download"></i> Stáhnout</a>
                                </div>
                            {% endif %}

                            {% if form.delete is defined %}
                                <div class="form-group">
                                    <input type="checkbox" id="{{ form.delete.vars.id }}" name="{{ form.delete.vars.name }}" autocomplete="off" value="{{ form.delete.vars.value }}">
                                    <div class="btn-group">
                                        <label for="{{ form.delete.vars.id }}" class="btn btn-xs btn-danger">
                                            <span class="fa fa-check"></span>
                                            <span> </span>
                                        </label>
                                        <label for="{{ form.delete.vars.id }}" class="btn btn-xs btn-default">
                                            Smazat
                                        </label>
                                    </div>
                                </div>
                            {% endif %}
                        </div>

                    </div>

                {% endif %}

                <div class="panel-footer">
                    {{ form_widget(form.file) }}
                </div>
            </div>

        </div>
    {% endspaceless %}
{% endblock %}

{% block vich_image_row -%}
    {% set force_error = true %}
    {{- block('form_row') }}
{%- endblock %}

{% block vich_image_widget %}
    {% spaceless %}
        <div class="vich-image">
            <div class="panel panel-default">

                <div class="panel-heading">
                    {{ form_widget(form.file) }}
                </div>
                {% if download_uri is defined and download_uri %}
                    <div class="panel-body">
                        <div class="col-xs-12 col-sm-4">
                            <a href="{{ download_uri }}" class="preview"><img src="{{ download_uri }}" alt="Image" /></a>
                        </div>

                        <div class="col-xs-12 col-sm-8 file-info">
                            {{ download_uri }}
                        </div>

                    </div>
                    <div class="panel-footer">
                        {% if form.delete is defined %}
                            <label for="{{ form.delete.vars.id }}">
                                <input type="checkbox" id="{{ form.delete.vars.id }}" name="{{ form.delete.vars.name }}" autocomplete="off" value="{{ form.delete.vars.value }}" class="flat" />
                                Smazat
                            </label>
                        {% endif %}

                        {% if show_download_link and download_uri is defined and download_uri %}
                            <div class="pull-right">
                                <a href="{{ download_uri }}" class="btn btn-xs btn-default"><i class="fa fa-fw fa-download"></i> Stáhnout</a>
                            </div>
                        {% endif %}

                        <div class="clearfix"></div>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endspaceless %}
{% endblock %}
