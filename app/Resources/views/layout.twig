<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}Home{% endblock %} | Škoda Felicia</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>

    {# - Fonts #}
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700Roboto:400,700,900&subset=latin-ext" rel="stylesheet">

    {# - Vendors #}
    <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/vendor/font-awesome/css/font-awesome.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/vendor/lightgallery/dist/css/lightgallery.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/css/bootswatch.css') }}"/>

    {# - Styles #}
    <link rel="stylesheet" href="{{ asset('assets/css/print.css') }}" media="print"/>
    <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}"/>

    {# - Sublayouts styles #}
    {% block stylesheets %}{% endblock %}
</head>

<body data-spy="scroll" data-target=".navbar" data-offset="50">
<div id="wrapper">
    <a href="#" id="top"></a>
    <noscript>
        <div class="noscript-overlay">
            <div class="info">Tento web vyžaduje pro správnou funkčnost JavaScript.</div>
        </div>
    </noscript>


    {% block header %}
        <div class="header-bg">
            <header>
                <div class="display-table">
                    <div class="display-table-cell">
                        <div class="container">
                            <div class="row">
                                <div class="col-xs-12">
                                    <a href="{{ url('frontend_manual') }}">
                                        <h1 class="heading">
                                            <strong class="text-large pull-left">Škoda Felicia</strong>
                                            <div class="clearfix"></div>
                                        </h1>
                                    </a>

                                    <div id="subtext" class="text-main-light hidden-xs">www.skoda-felicia.eu</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <nav class="navbar navbar-default navbar-static-top">
                    <div class="container">
                        <div class="navbar-header">
                        </div>

                        <div id="top-menu">
                            {% block menu %}{% endblock %}
                        </div>
                    </div>
                </nav>
            </header>
        </div>
    {% endblock %}

    {% for type, messages  in app.session.flashBag.all() %}
        {% for message in messages %}
            <section id="alerts" class="container">
                <div class="alert alert-{{ type }}">
                    <i class="fa fa-exclamation-triangle"></i> {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </section>
        {% endfor %}
    {% endfor %}

    <section id="content">
        {% block body %}{% endblock %}
    </section>


    <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/lightgallery/dist/js/lightgallery.min.js') }}"></script>
    {% block javascripts %}{% endblock %}
    {% block googleAnalytics %}
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r;
                i[r] = i[r] || function () {
                            (i[r].q = i[r].q || []).push(arguments)
                        }, i[r].l = 1 * new Date();
                a = s.createElement(o),
                        m = s.getElementsByTagName(o)[0];
                a.async = 1;
                a.src = g;
                m.parentNode.insertBefore(a, m)
            })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-91626892-1', 'auto');
            ga('send', 'pageview');

        </script>
    {% endblock %}

    <footer class="bg-inverse no-print">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                    {% if maintenance is not defined %}
                        <p>
                            <strong><i class="fa fa-chevron-left"></i> Rychlá navigace
                                <i class="fa fa-chevron-right"></i>
                            </strong>
                        </p>

                        {% block footerLinks %}{% endblock %}
                    {% endif %}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <br/><a href="http://raito.cz/" class="pull-left author"><strong>RS</strong>WEBWORKS 2016</a>
                    <a class="pull-right" rel="license" href="http://creativecommons.org/licenses/by-sa/4.0/"><img
                                alt="Licence Creative Commons" style="border-width:0"
                                src="https://i.creativecommons.org/l/by-sa/4.0/80x15.png"/></a>
                </div>
            </div>
        </div>
    </footer>
</div>
</body>

</html>
