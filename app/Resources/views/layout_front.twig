{% extends 'layout.twig' %}

{% block header %}
    <div class="header-bg">
        <header>
            <div class="display-table">
                <div class="display-table-cell">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-12">
                                <a href="{{ url('frontend_manual') }}">
                                    <h1 class="heading">
                                        <strong class="text-large pull-left">Škoda Felicia</strong>
                                        <div class="pull-left line-box-holder visible-md visible-lg">
                                            <div class="line-box" data-toggle="tooltip" data-placement="bottom"
                                                 title="1.3 karburátor">135
                                            </div>
                                            <div class="line-box" data-toggle="tooltip" data-placement="bottom"
                                                 title="1.3 BMM / MPI">135B/M
                                            </div>
                                            <div class="line-box" data-toggle="tooltip" data-placement="bottom"
                                                 title="1.6 MPI">AEE
                                            </div>
                                            <div class="line-box" data-toggle="tooltip" data-placement="bottom"
                                                 title="1.9 diesel">AEF
                                            </div>
                                        </div>
                                        <div class="clearfix"></div>
                                    </h1>
                                </a>

                                <div id="subtext" class="text-main hidden-xs">www.skoda-felicia.eu</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <nav class="navbar navbar-default">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                                data-target="#top-menu" aria-expanded="false">
                            <span class="sr-only">Přepnout menu</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <div class="collapse navbar-collapse" id="top-menu">
                        {# - Navbar SM, MD #}
                        <ul class="nav navbar-nav visible-sm visible-md">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                   aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-bars"></i> Navigace
                                    <span class="caret"></span></a>
                                <ul class="dropdown-menu main-nav-small">
                                    <li><a href="{{ url('frontend_manual') }}"><i class="fa fa-book"></i> Dílenská
                                            příručka</a>
                                    </li>

                                    <li><a href="{{ url('frontend_manual') }}"><i class="fa fa-question-circle"></i>
                                            Časté
                                            otázky</a></li>

                                    <li><a href="{{ url('frontend_manual') }}"><i class="fa fa-wrench"></i> Návody</a>
                                    </li>

                                    <li><a href="{{ url('frontend_manual') }}"><i class="fa fa-dashboard"></i> Sportovní
                                            úpravy</a></li>

                                    <li><a href="{{ url('frontend_manual') }}"><i class="fa fa-download"></i> Ke stažení</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>

                        {# - Navbar XS, LG #}
                        <ul class="nav navbar-nav visible-lg visible-xs">
                            {# - Dílenská příručka #}
                            {# ------------------------------------------------------------------------------------------ #}
                            <li {% if app.request.attributes.get('_route') starts with 'frontend_manual' %}class="active"{% endif %}>
                                <a href="{{ url('frontend_manual') }}">
                                    <i class="fa fa-book"></i> Dílenská příručka
                                </a>
                            </li>

                            {# - Často kladené otázky #}
                            {# ------------------------------------------------------------------------------------------ #}
                            <li>
                                <a href="#">
                                    <i class="fa fa-question-circle"></i> Časté otázky
                                </a>
                            </li>

                            {# - Návody #}
                            {# ------------------------------------------------------------------------------------------ #}
                            <li>
                                <a href="#">
                                    <i class="fa fa-wrench"></i> Návody
                                </a>
                            </li>

                            {# - Sportovní úpravy #}
                            {# ------------------------------------------------------------------------------------------ #}
                            <li>
                                <a href="#">
                                    <i class="fa fa-dashboard"></i> Sportovní úpravy
                                </a>
                            </li>

                            {# - Ke stažení #}
                            {# ------------------------------------------------------------------------------------------ #}
                            <li>
                                <a href="#">
                                    <i class="fa fa-download"></i> Ke stažení
                                </a>
                            </li>
                        </ul>

                        {{ render(controller('AppBundle:Frontend/Search:search', {request: app.request})) }}
                    </div>
                </div>
            </nav>
        </header>
    </div>
{% endblock %}


{% block javascripts %}
    <script src="{{ asset('assets/js/main.js') }}"></script>
{% endblock %}

{% block footerLinks %}
    <ul class="list-inline">
        <li><a href="{{ url('frontend_manual') }}">Dílenská příručka</a></li>
        <li><a href="">Časté otázky</a></li>
        <li><a href="">Návody</a></li>
        <li><a href="">Sportovní úpravy</a></li>
        <li><a href="">Ke stažení</a></li>
        <li><a href="">Autoři</a></li>
        <li><a href="{{ url('manager_home') }}">Správa obsahu</a></li>
    </ul>
{% endblock %}