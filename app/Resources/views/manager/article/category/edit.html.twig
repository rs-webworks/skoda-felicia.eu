{% extends 'layout_manager.html.twig' %}
{% block title %}Upravit kategorii článku{% endblock %}
{% block body %}

    <div class="container" id="manager-article-category-edit">

        <div class="col-xs-12">
            <h1>
                Úprava kategorie
                <div class="pull-right">
                    <a href="{{ url('manager_article_create') }}" class="btn btn btn-success">
                        <i class="fa fa-plus"></i> Přidat
                    </a>
                    <a href="{{ url('manager_article_category_list') }}" class="btn btn btn-default">
                        <i class="fa fa-list"></i> Kategorie
                    </a>
                </div>
            </h1>
            <ol class="breadcrumb">
                <li><a href="{{ url('manager_home') }}">Manažer</a></li>
                <li><a href="{{ url('manager_article_list') }}">Články</a></li>
                <li><a href="{{ url('manager_article_category_list') }}">Kategorie</a></li>
                <li class="active">Nová kategorie</li>
            </ol>
        </div>

        <div class="col-xs-12 col-md-6">
            <div class="x_panel">

                <div class="x_title">
                    <h2>Informace</h2>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    {{ form_widget(form) }}

                    <button type="submit" class="btn btn-default pull-right">
                        <i class="fa fa-asterisk"></i> Uložit kategorii
                    </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-6">
            <div class="x_panel">

                <div class="x_title">
                    <h2>Strom kategorií</h2>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">
                    to be done
                </div>
            </div>
        </div>
    </div>

{% endblock %}