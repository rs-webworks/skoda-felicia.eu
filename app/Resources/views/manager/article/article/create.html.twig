{% extends 'layout_manager.html.twig' %}
{% block title %}Nový článek{% endblock %}
{% block body %}

    <div class="container" id="manager-article-create">

        {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="col-xs-12">
            <h1>
                Nový článek

                <button type="submit" class="btn btn-success pull-right">
                    <i class="fa fa-fw fa-save"></i> Uložit článek
                </button>
            </h1>


            <ol class="breadcrumb">
                <li><a href="{{ url('manager_home') }}">Manažer</a></li>
                <li><a href="{{ url('manager_article_list') }}">Články</a></li>
                <li class="active">Nový článek</li>
            </ol>
        </div>


        <div class="col-xs-6 col-md-6">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Hlavní info</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    {{ form_row(form.title) }}
                    {{ form_row(form.category) }}
                    {{ form_row(form.author) }}
                    {{ form_row(form.createdAt) }}
                    {{ form_row(form.published) }}
                    {{ form_row(form._token) }}
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Doplňující info</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    {{ form_row(form.perex) }}
                    {{ form_row(form.imageFile) }}
                </div>
            </div>
        </div>


        <div class="col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Obsah (HTML + TWIG + JS)</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    {{ form_widget(form.content) }}
                </div>
            </div>
        </div>

        {{ form_end(form, {'render_rest': false}) }}
    </div>

{% endblock %}