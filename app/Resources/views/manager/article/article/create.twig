{% extends 'layout_manager.twig' %}
{% block title %}Správa obsahu - Soubory ke stažení{% endblock %}
{% block body %}

    <div class="container" id="manager-home">
        <h3>Nový článek</h3>
        <ol class="breadcrumb">
            <li><a href="{{ url('manager_home') }}">Manažer</a></li>
            <li><a href="{{ url('manager_article_list') }}">Články</a></li>
            <li class="active">Nový článek</li>
        </ol>

        {{ form_start(form) }}

        {{ form_errors(form) }}

